{
  "manifest_version": 3,
  "author": "Monarch Money Toolkit",
  "name": "Monarch Money Toolkit",
  "description": "Feature and UI customizations for the web version of Monarch Money",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "*://*.monarchmoney.com/*"
      ],
      "all_frames": true,
      "run_at": "document_idle",
      "js": [
        "content-scripts/extension-bridge.js"
      ]
    }
  ],
  "icons": {},
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "web-accessibles/*"
      ],
      "matches": [
        "*://*.monarchmoney.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/index.html"
  },
  "action": {
    "default_title": "Monarch Money Toolkit",
    "default_popup": "popup/index.html"
  },
  "homepage_url": "https://github.com/dandurland/toolkit-for-monarch-money",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.monarchmoney.com/*"
  ]
}